#!/usr/bin/bash
exec 2> /dev/null

if [ "$(playerctl status)" = "Stopped"  -o -z "$(playerctl status)" ]; then
  echo ""
  exit
fi

title=$(playerctl metadata title)
artist=$(playerctl metadata artist)

if [ "$(playerctl status)" = "Playing" ]; then
  ic=
else
  ic=
fi

printf "%s %s - %s" $ic $artist ${title:0:49}
